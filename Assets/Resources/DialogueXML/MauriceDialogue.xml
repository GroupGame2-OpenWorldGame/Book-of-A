	<DialogueElement Type="DialogueLine">
		<Id>2</Id>
		<Speaker>Player</Speaker>
		<Text>Hey, are you ok?</Text>
		<SetWhenDone>
			<value>TalkedToMaurice</value>
			<value>MauriceQuest</value>
		</SetWhenDone>
		<SetType>
			<value>flag,true</value>
			<value>quest,InProgress,</value>
		</SetType>
		<NextLineId>3</NextLineId>
	</DialogueElement>
	<DialogueElement Type="DialogueLine">
		<Id>3</Id>
		<Speaker>Maurice</Speaker>
		<Text>Oh, yes I'm fine...</Text>
		<NextLineId>4</NextLineId>
	</DialogueElement>
	<DialogueElement Type="DialogueLine">
		<Id>4</Id>
		<Speaker>Maurice</Speaker>
		<Text>...</Text>
		<NextLineId>5</NextLineId>
	</DialogueElement>
